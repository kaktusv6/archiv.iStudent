<Window x:Class="Archivy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Archivy" Height="254.202" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Определение колонок и строк в Grid -->
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>-->
        <Menu HorizontalAlignment="Stretch" Height="20" VerticalAlignment="Top" AllowDrop="True">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать архив" Click="Open_MunuItem_Click"></MenuItem>
                <MenuItem Header="Открыть архив"></MenuItem>
                <MenuItem Header="Распокавать архив"></MenuItem>
                <MenuItem Header="Сохранить как..."></MenuItem>
                <MenuItem Header="Добавить файл"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Правка">
                <MenuItem Header="Копировать"></MenuItem>
                <MenuItem Header="Вставить"></MenuItem>
                <MenuItem Header="Вырезать"></MenuItem>
                <MenuItem Header="Переименовать"></MenuItem>
                <MenuItem Header="Удалить"></MenuItem>
            </MenuItem>
            <MenuItem Header="Справка" Height="20">
                <MenuItem Header="Помощь"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Об Архиваторе"></MenuItem>
            </MenuItem>
        </Menu>
        <ListBox x:Name="fileList" HorizontalAlignment="Stretch" Margin="0,20,0,0" VerticalAlignment="Stretch" BorderThickness="0,1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding nameFile}" Grid.Column="0"></TextBlock>
                        <TextBlock Text="{Binding text}" Grid.Column="1"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
